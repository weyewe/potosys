
<div class="span9 content">
    <%= create_guide("Edit Image Ordering", 
        "For Article: <b>#{@article.title}</b>" + "<br />" +
        "Total Images:<b>#{@article.article_pictures.count}</b>." ).html_safe %>

  
  <% if params[:notice] %>
  <div class="alert alert-success">
    <a data-dismiss="alert" class="close">Ã—</a>
    <strong>Well done!</strong> Your new image order is <strong>saved</strong> successfully. 
  </div>
  <% end %>


  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  
  <%= render :partial => "articles/article_pictures_uploader" %>
  

  
  
  
  
  <div class="row-fluid">
    <div class="span12">
      <%= form_tag update_image_ordering_url(@article, @independent_article_value) do %>
        <table cellpadding="0" cellspacing="0" border="0" 
              class="table table-striped table-bordered" id="approval_status">
          <thead>
            <tr>
              <th style="text-align:center;">
                Image
              </th>
              <th style="text-align:center;">
                Current Ordering
              </th>
              <th style="text-align:center;">
                Edit Ordering
              </th>
              <th style="text-align:center;">
                Teaser?
              </th>
            </tr>
          </thead>
          <tbody>
            <% @article_pictures.each do |pic| %>
              <%= render :partial => 'article_pictures/article_pic_entry', :locals => {
                :pic => pic, 
                :article => @article
              }%>
            <% end %>
          
          </tbody>
        </table>
        
        
        <div class="form-actions" style="text-align:center;">
          <button class="btn btn-primary" type="submit">Save Image Order</button>
        </div>
      <% end %>
    
    </div><!--/span-->

    
    
  </div><!--/row-->

</div><!--/span-->


<div class=" hidden" id="checkbox_form_wrapper">
  <%= form_for ArticlePicture.new, :url =>show_article_picture_as_teaser_url, :method => :post    do |f| %>
    <%= hidden_field_tag 'membership_provider' , ''  %>
    <%= hidden_field_tag 'membership_consumer', '' %>
    <%= hidden_field_tag 'membership_decision', '' %>
  <% end %>
</div>
