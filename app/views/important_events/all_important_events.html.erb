
<div class="span9 content">
  
  
  <%= create_guide("Important Events", 
        "Office: <b>#{current_office.name}</b>"  + "<br />" +  
        "Number of Days observed: <b>#{@important_event_period}</b>"   ).html_safe %>
  
  <%#= create_breadcrumb(@breadcrumbs).html_safe %>
  <div class="row-fluid">
    <div class="span8">
    

          
      <%= form_tag  all_important_events_url, 
      :method => :get, :id => "search_member"  do  %>
        <table cellpadding="0" cellspacing="0" border="0" 
          class="table table-striped table-bordered" id="example">
          <thead>
            <tr>
              <th colspan="2" style="text-align:left;">
                Observational Period Adjustment 
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td style="text-align:right;"><b>Number of Days</b></td>
              <td><%= text_field_tag 'important_event_period', "#{@important_event_period}" %></td>
            </tr>

            <tr>
              <td colspan="2" style="text-align:center;">
                <button href="#" class="btn btn-primary" >
                  Adjust Period
                </button>
              </td>
            </tr>
          </tbody>
        </table>
    <% end %>
      
    </div> 
    <div class="span4">
    </div>
      
      
      
    
  </div><!--/row-->
   
   
  <div class="row-fluid">
    <div id="data_list">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Creator</th>
            <th>Client</th>
            <th>Last Contact Date</th>
            <th>Title</th>
            <th>Description</th>
            <th>Event Date (MM/DD/YYYY)</th>
            <th>Annual Event?</th>
          </tr>
        </thead>
        
      
          
          
        <tbody>
          <% @important_events.each do |important_event| %>
            <tr>
              <td><%= important_event.creator.email  %></td>
              <td><%= important_event.client.name %></td>
              <td><%= format_date_from_datetime( important_event.client.last_contact_report.contact_datetime )  %></td>
              <td><%= important_event.title  %></td>
              <td><%= important_event.description  %></td>
              <td><%= format_date_from_datetime( important_event.event_date)   %></td>
              <td>
                <% if important_event.is_repeating_annually == true %>
                   	<span class="label label-success">Yes</span>
                <% else %>
                  <span class="label label-important">No</span>
                <% end %>
              </td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















