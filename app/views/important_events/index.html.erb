
<div class="span9 content">
  <%= create_guide("Important Events", 
        "Office: <b>#{current_office.name}</b>"  + "<br />" + 
        "Employee: <b>#{current_user.email}</b>" + "<br />" + 
        "Client: <b>#{@client.name}</b>"  + "<br />" + 
        "Total Sales Order: <b>#{@total_important_event_count}</b>"   ).html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  <div class="row-fluid">
    <div id="data_list">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Creator</th>
            <th>Title</th>
            <th>Description</th>
            <th>Event Date</th>
            <th>Annual Event?</th>
          </tr>
        </thead>
        
      
          
          
        <tbody>
          <% @important_events.each do |important_event| %>
            <tr>
              <td><%= important_event.creator.email  %></td>
              <td><%= important_event.title  %></td>
              <td><%= important_event.description  %></td>
              <td><%= important_event.event_date %></td>
              <td>
                <% if important_event.is_repeating_annually == true %>
                   	<span class="label label-success">Yes</span>
                <% else %>
                  <span class="label label-important">No</span>
                <% end %>
              </td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















