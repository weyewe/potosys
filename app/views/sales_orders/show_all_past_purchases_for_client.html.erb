
<div class="span9 content">
  <%= create_guide("Sales Orders", 
        "Office: <b>#{current_office.name}</b>"  + "<br />" + 
        "Employee: <b>#{current_user.email}</b>" + "<br />" + 
        "Client: <b>#{@client.name}</b>"  + "<br />" + 
        "Total Sales Order: <b>#{@total_sales_order_count}</b>"   ).html_safe %>
  
  <ul class="pager">
    <li class="previous">
      <%= link_to " â† Back to Search Result for #{params[:client_name]}",  
        search_client_for_marketing_interaction_url( :client_name => params[:client_name] ) %>
    </li>
  </ul>
  
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  <div class="row-fluid">
    <div id="data_list">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Employee</th>
            <th>Purchased Package</th>
            <th>Total Amount</th>
            <th>Date of Purchase</th>
          </tr>
        </thead>
        
      
          
          
        <tbody>
          <% @sales_orders.each do |sales_order| %>
            <tr>
              <td><%= sales_order.creator.email  %></td>
              <td>
                <% sales_order.projects.each do |project|  %>
                  <%= project.package.name %>  <br />
                <% end %>
              </td>
              <td><%= print_money(sales_order.total_transaction_amount)  %></td>
              <td><%= sales_order.created_at %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















