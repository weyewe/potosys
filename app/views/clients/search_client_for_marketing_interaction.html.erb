
<div class="span9 content">
  <%= create_guide("Create Interaction",  
        "Office: <b>#{@office.name}</b>" + "<br />"          ).html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>

  
  <div class="row-fluid">
    <div class="span8">
    

          
      <%= form_tag  search_client_for_marketing_interaction_url, 
      :method => :get, :id => "search_member"  do  %>
        <table cellpadding="0" cellspacing="0" border="0" 
          class="table table-striped table-bordered" id="example">
          <thead>
            <tr>
              <th colspan="2" style="text-align:left;">
                Search Client
              </th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td style="text-align:right;"><b>Client Name</b></td>
              <td><%= text_field_tag 'client_name' %></td>
            </tr>

            <tr>
              <td colspan="2" style="text-align:center;">
                <button href="#" class="btn btn-primary" >
                  Search Client
                </button>
              </td>
            </tr>
          </tbody>
        </table>
    <% end %>
      
    </div> 
    <div class="span4">
    </div>
      
      
      
    
  </div><!--/row-->
   <hr />
  <div class="row-fluid">
    <div id="data_list">
      <h2>Client matching result: <%= @clients.count %></h2>
      
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Mobile Phone</th>
            <th>Home</th>
            <th>BB Pin</th>
            <th>Email</th>
            <th>Contact History</th>
            <th>Purchase History</th>
            <th>Important Event</th>
          </tr>
        </thead>
        
      
          
          
        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.name  %></td>
              <td><%= client.address  %></td>
              <td><%= client.mobile  %></td>
              <td><%= client.home_phone  %></td>
              <td><%= client.bb_pin  %></td>
              <td><%= client.email  %></td>
              <td><%= link_to  client.contact_reports.count, new_client_contact_report_url(client)  %></td>
              <td><%= link_to client.sales_orders.count , show_all_past_purchases_for_client_url(client) %></td>
              <td><%= link_to client.important_events.count , new_client_important_event_url(client)   %></td>
            
              
              
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















