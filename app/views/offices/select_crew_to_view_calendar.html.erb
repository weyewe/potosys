
<div class="span9 content">
  <%= create_guide("Crew's Calendar", 
        "Office: <b>#{current_office.name}</b>"  ).html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <a data-dismiss="alert" class="close">×</a>
      <strong>Well done!</strong> <%= flash[:notice].html_safe %>
    </div>
  <% end %>
  
  <% if flash[:error] %>
    <div class="alert alert-error">
      <a data-dismiss="alert" class="close">×</a>
      <strong>Create Failure!</strong> Please fill in all fields.
    </div>
  <% end %>
  
  
 
  <div class="row-fluid">
    <div id="data_list">
      <h2>Total Crews for office  <%= @office.name %>: <%= @crews.count %> </h2>
      
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Crew</th>
            <th>Booked Jobs</th>
          </tr>
        </thead>
        <tbody>
          <% @crews.each do |crew| %>
            <tr>
              <td><%= link_to crew.email , crew_schedule_url( crew ) %></td>
              <td><%= crew.booked_job_requests(current_office).count %></td>
              
            </tr>
          <% end %>

        </tbody>
      </table>
    </div><!-- end of #data_list -->
  </div>

</div><!--/span-->















